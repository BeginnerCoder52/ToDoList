<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="12dp"
    android:background="@drawable/card_todo_background"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cbCompleted"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:buttonTint="@color/cyan"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="READING BOOKS"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/dark_text"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read every day"
                android:textSize="15sp"
                android:textColor="#666666"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/tvDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hạn: 25/12/2025 23:59"
                android:textColor="@color/cyan"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ĐANG LÀM"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="#E8F5E8"
                android:textColor="#2E7D32"
                android:layout_marginTop="12dp"
                android:backgroundTint="#E8F5E8"/>
        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_reading"
            app:tint="@color/cyan"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>